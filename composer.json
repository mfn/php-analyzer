{
    "name": "mfn/php-analyzer",
    "description": "Static code analyzer for PHP",
    "type": "ibrary",
    "keywords": [
        "source",
        "code",
        "analysis"
    ],
    "homepage": "http://github.com/mfn/php-analyzer",
    "authors": [
        {
            "name": "Markus Fischer",
            "email": "markus@fischer.name",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/mfn/php-analyzer/issues"
    },
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "mfn/util-simpleorderedmap": "0.0.2",
        "nikic/php-parser": "1.0.0",
        "ulrichsg/getopt-php": "2.2.0",
        "psr/log": "1.0.0",
        "symfony/console": "2.5.5"
    },
    "autoload": {
        "psr-4": {
            "Mfn\\PHP\\Analyzer\\": "lib/"
        }
    },
    "bin": [
      "bin/php_analyzer"
    ],
    "require-dev": {
        "phpunit/phpunit": "4.2.*",
        "phing/phing": "2.8.2",
        "mfn/php-reflection-gen": "0.0.3"
    }
}
